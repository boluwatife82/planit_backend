# Use Node.js LTS version
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files first (better caching)
COPY package*.json ./

# Install only production dependencies
RUN npm ci --only=production

# Copy app files including .env if you want (optional)
COPY . .

# Expose port (Railway will override with PORT env variable)
EXPOSE 5000

# Ensure Node loads dotenv at start (for local dev)
# CMD will run a small wrapper to load env first
CMD ["sh", "-c", "node -r dotenv/config src/server.js"]
